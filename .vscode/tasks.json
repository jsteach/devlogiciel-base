{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build nob",
            "type": "shell",
            "command": "${workspaceFolder}/Tools/w64devkit/bin/cc.exe",
            "args": [
                "-ggdb3",
                "nob.c",
                "-o",
                "nob.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build game",
            "type": "shell",
            "command": "${workspaceFolder}/nob.exe",//"${workspaceFolder}/Tools/windows_x64/zig.exe",
            "dependsOn": "Build nob",
        },
        {
            "label": "Run setup",
            "type": "shell",
            "command": "${workspaceFolder}/setup.bat",
        }
    ]
}